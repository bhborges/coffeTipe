<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.EspressoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:background="#424242">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RISTRETTO"
            android:textColor="#FFD600"
            android:id="@+id/tituloEspresso"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageEspresso"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ristretto"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tituloEspresso"
            android:layout_centerHorizontal="true" />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="É o espresso curtissimo com 15 a 25 ml de volume e é servido na xícara de 50 ml. É considerado o néctar do café e, por incrível que pareça, é extremamente doce se bem tirado."
           android:layout_below="@+id/imageEspresso"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:textSize="20sp"
           android:layout_margin="30dp"
           android:textColor="@android:color/background_light"/>

    </RelativeLayout>
</FrameLayout>
